doctype html
html(lang='zh-CN')
    head
        title= title
        meta(charset='utf-8')
        link(rel='stylesheet',href='/stylesheets/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/style.css')
    body
        div.login-bg
            div.container
                .row
                    .col-md-4.col-md-offset-4.signin-container
                        form(method="post",action="/user/signin")
                            .modal-header
                                h3 系统管理台登录
                            .modal-body
                                .form-group
                                    label(for="signinName") 用户名
                                    input#signinName.form-control.form-control1(name="user[name]",type="text")
                                .form-group
                                    label(for="signinName") 密码
                                    input#signinPassword.form-control.form-control1(name="user[password]",type="password")
                                .form-group
                                    input(type="checkbox")#signincheckbox
                                    label(for="signincheckbox").remmberSecret 记住密码
                                .modal-foot
                                    button.btn.btn-info.form-control(type="submit") 登录